@model UserFormViewModel

<div class="alert bg-light-primary border border-primary border-3 border-dashed d-flex justify-content-between w-100 p-5 mb-10">
    <form method="post" asp-controller="User" class="w-75" enctype="multipart/form-data" id="Form">
        <div class="d-flex align-items-center">
            <div class="row col-12">
                <div class="row col-6">
                    <!--begin::Label-->
                    <label class="col-lg-4 col-form-label fs-5 required" asp-for="UserName">أسم المستخدم</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <!--begin::Row-->
                        <div class="row">
                            <!--begin::Col-->
                            <div class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
                                <input class="form-control form-control-solid fs-5" type="text" placeholder="ادحل أسم المستخدم" asp-for="UserName" />
                                <span asp-validation-for="UserName" class="fv-plugins-message-container invalid-feedback"></span>
                                <!--end::Col-->
                            </div>
                        </div>
                        <!--end::Row-->
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row col-6">
                    <!--begin::Label-->
                    <label class="col-lg-4 col-form-label fs-5 required" asp-for="Password">كلمه المرور</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <!--begin::Row-->
                        <div class="row">
                            <!--begin::Col-->
                            <div class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
                                <input class="form-control form-control-solid fs-5" type="text" placeholder="ادحل كلمه المرور" asp-for="Password" />
                                <span asp-validation-for="Password" class="fv-plugins-message-container invalid-feedback"></span>
                                <!--end::Col-->
                            </div>
                        </div>
                        <!--end::Row-->
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row col-6">
                    <!--begin::Label-->
                    <label class="col-lg-4 col-form-label fs-5 required" asp-for="FullName">أسم المستخدم بالكامل</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <!--begin::Row-->
                        <div class="row">
                            <!--begin::Col-->
                            <div class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
                                <input class="form-control form-control-solid fs-5" type="text" placeholder="ادحل أسم المستخدمم الكامل" asp-for="FullName" />
                                <span asp-validation-for="FullName" class="fv-plugins-message-container invalid-feedback"></span>
                                <!--end::Col-->
                            </div>
                        </div>
                        <!--end::Row-->
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row col-6">
                    <!--begin::Label-->
                    <label class="mb-5 col-lg-4 col-form-label required fw-semibold fs-5">القسم</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <!--begin::Row-->
                        <div class="row">
                            <!--begin::Col-->
                            <div class="fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
                                <select aria-label="Select a Country" data-control="select2" data-placeholder="اختار القسم..." class="form-select form-select-solid form-select-lg fw-semibold"
                                        asp-for="DepartmentId" asp-items="@Model.Departments">
                                    <option value="">اختار القسم...</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger d-block"></span>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Row-->
                    </div>
                    <!--end::Col-->
                </div>
                <div class="row col-6">
                    <!--begin::Label-->
                    <label class="col-lg-4 col-form-label required fw-semibold fs-6" asp-for="SelectedRole">الصلاحيه</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <!--begin::Row-->
                        <div class="row mb-6">
                            <div class="mb-2">
                                <select class="form-select form-select-solid js-select2" data-placeholder="اختار الصلاحيه" asp-for="SelectedRole" asp-items="@Model.Roles">
                                </select>
                            </div>
                            <span asp-validation-for="SelectedRole" class="text-danger d-block"></span>
                        </div>
                        <!--end::Row-->
                    </div>
                    <!--end::Col-->
                </div>
            </div>
            <!--end::Content-->
        </div>
    </form>
    <div class=" align-content-end">
        <button type="submit" asp-controller="User" asp-action="Create" class="btn btn-sm btn-primary" form="Form">
            <i class="bi bi-plus-square-dotted"></i>
            اضافه
        </button>
    </div>
</div>