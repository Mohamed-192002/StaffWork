@model WorkDailyEditFormViewModel

<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModalBegin"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="onModalComplete">
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="row mb-6">
        <!--begin::Label-->
        <label class="col-lg-4 col-form-label required fw-semibold fs-4" asp-for="Note"></label>
        <!--end::Label-->
        <!--begin::Col-->
        <div class="col-lg-8">
            <!--begin::Row-->
            <div class="row">
                <!--begin::Col-->
                <div class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
                    <textarea type="text" class="form-control form-control-lg form-control-solid mb-3 mb-lg-0 fs-4" asp-for="Note"></textarea>
                    <span asp-validation-for="Note" class="fv-plugins-message-container invalid-feedback fs-6"></span>
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
        </div>
        <!--end::Col-->
    </div>
    <div class="row mb-6">
        <!--begin::Label-->
        <label class="mb-5 col-lg-4 col-form-label required fw-semibold fs-5">العمل</label>
        <!--end::Label-->
        <!--begin::Col-->
        <div class="col-lg-8">
            <!--begin::Row-->
            <div class="row">
                <!--begin::Col-->
                <div class="fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
                    <select aria-label="Select a work" data-control="select2" data-placeholder="اختار العمل..." class="form-select form-select-solid form-select-lg fw-semibold"
                            asp-for="WorkTypeId" asp-items="@Model.WorkTypes">
                        <option value="">اختار العمل...</option>
                    </select>
                    <span asp-validation-for="WorkTypeId" class="text-danger d-block"></span>
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
        </div>
        <!--end::Col-->
    </div>
    <partial name="_ModalFooter" />
</form>
