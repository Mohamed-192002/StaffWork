@model DepartmentFormViewModel

<div class="alert bg-light-primary border border-primary border-3 border-dashed d-flex justify-content-between w-100 p-5 mb-10">
	<form method="post" asp-controller="Department" class="w-75" enctype="multipart/form-data" id="Form">
		<div class="d-flex align-items-center">
			<div class="row col-12">
				<div class="row col-6">
					<!--begin::Label-->
					<label class="col-lg-4 col-form-label required fw-semibold fs-5" asp-for="Name">أسم القسم</label>
					<!--end::Label-->
					<!--begin::Col-->
					<div class="col-lg-8">
						<!--begin::Row-->
						<div class="row mb-6">
							<!--begin::Col-->
							<div class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
								<input class="form-control form-control-solid fs-5" type="text" placeholder="ادحل أسم القسم" asp-for="Name" />
								<span asp-validation-for="Name" class="fv-plugins-message-container invalid-feedback"></span>
								<!--end::Col-->
							</div>
						</div>
						<!--end::Row-->
					</div>
					<!--end::Col-->
				</div>
				<div class="row col-6">
					<!--begin::Label-->
					<label class="mb-5 col-lg-4 col-form-label required fw-semibold fs-5">الاداره</label>
					<!--end::Label-->
					<!--begin::Col-->
					<div class="col-lg-8">
						<!--begin::Row-->
						<div class="row mb-6">
							<!--begin::Col-->
							<div class="fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
								<select aria-label="Select a Country" data-control="select2" data-placeholder="اختار الاداره..." class="form-select form-select-solid form-select-lg fw-semibold"
										asp-for="AdministrationId" asp-items="@Model.Administrations">
									<option value="">اختار الاداره...</option>
								</select>
								<span asp-validation-for="AdministrationId" class="text-danger d-block"></span>
							</div>
							<!--end::Col-->
						</div>
						<!--end::Row-->
					</div>
					<!--end::Col-->
				</div>

				<!--end::Content-->
			</div>
		</div>
	</form>
	<div class=" align-content-end">
		<button type="submit" asp-controller="Department" asp-action="Create" class="btn btn-sm btn-primary" form="Form">
			<i class="bi bi-plus-square-dotted"></i>
			اضافه
		</button>
	</div>
</div>