@model DepartmentFormViewModel

<form asp-action="PostEdit"
	  data-ajax-method="post"
	  data-ajax="true"
	  data-ajax-begin="onModalBegin"
	  data-ajax-success="onModalSuccess"
	  data-ajax-failure="showErrorMessage"
	  data-ajax-complete="onModalComplete">
	@if (Model?.Id > 0)
	{
		<input type="hidden" asp-for="Id" />
	}
	<div class="row mb-6">
		<!--begin::Label-->
		<label class="col-lg-4 col-form-label required fw-semibold fs-4" asp-for="Name"></label>
		<!--end::Label-->
		<!--begin::Col-->
		<div class="col-lg-12">
			<!--begin::Row-->
			<div class="row">
				<!--begin::Col-->
				<div class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
					<input type="text" class="form-control form-control-lg form-control-solid mb-3 mb-lg-0 fs-4" asp-for="Name">
					<span asp-validation-for="Name" class="fv-plugins-message-container invalid-feedback fs-6"></span>
				</div>
				<!--end::Col-->
			</div>
			<!--end::Row-->
		</div>
		<!--end::Col-->
	</div>
	<div class="row mb-6">
		<!--begin::Label-->
		<label class="mb-5 col-lg-4 col-form-label required fw-semibold fs-4">الاداره</label>
		<!--end::Label-->
		<!--begin::Col-->
		<div class="col-lg-12">
			<!--begin::Row-->
			<div class="row">
				<!--begin::Col-->
				<div class="fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
					<select aria-label="Select a Country" data-control="select2" data-placeholder="اختار الاداره..." class="form-select form-select-solid form-select-lg fw-semibold"
							asp-for="AdministrationId" asp-items="@Model.Administrations">
						<option value="">اختار الاداره...</option>
					</select>
					<span asp-validation-for="AdministrationId" class="text-danger d-block"></span>
				</div>
				<!--end::Col-->
			</div>
			<!--end::Row-->
		</div>
		<!--end::Col-->
	</div>
	<partial name="_ModalFooter" />
</form>
