@using StaffWork.Core.Consts
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery

@{
	ViewData["Title"] = "التذكيرات";
	var isSuperAdminOrAdmin = User.IsInRole(AppRoles.SuperAdmin) || User.IsInRole(AppRoles.Admin);
}

@section Styles
{
	<link rel="stylesheet" href="~/assets/plugins/datatables/datatables.bundle.css" />
}


<div class="card shadow-sm">
	<div class="card-header align-items-center py-5 gap-2 gap-md-5">
		<div class="card-title">
			<div class="d-flex align-items-center position-relative my-1">
				<span class="svg-icon svg-icon-1 position-absolute ms-4">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
						<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
					</svg>
				</span>
				<input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="بحث..." />
			</div>
			<div id="kt_datatable_example_1_export" class="d-none"></div>
		</div>
		<div class="card-toolbar flex-row-fluid justify-content-end gap-5">
			<a href="javascript:void(0);" class="btn btn-light-primary" onclick="exportToExcel()">
				<span class="svg-icon svg-icon-2">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<rect opacity="0.3" width="12" height="2" rx="1" transform="matrix(0 -1 -1 0 12.75 19.75)" fill="currentColor"></rect>
						<path d="M12.0573 17.8813L13.5203 16.1256C13.9121 15.6554 14.6232 15.6232 15.056 16.056C15.4457 16.4457 15.4641 17.0716 15.0979 17.4836L12.4974 20.4092C12.0996 20.8567 11.4004 20.8567 11.0026 20.4092L8.40206 17.4836C8.0359 17.0716 8.0543 16.4457 8.44401 16.056C8.87683 15.6232 9.58785 15.6554 9.9797 16.1256L11.4427 17.8813C11.6026 18.0732 11.8974 18.0732 12.0573 17.8813Z" fill="currentColor"></path>
						<path opacity="0.3" d="M18.75 15.75H17.75C17.1977 15.75 16.75 15.3023 16.75 14.75C16.75 14.1977 17.1977 13.75 17.75 13.75C18.3023 13.75 18.75 13.3023 18.75 12.75V5.75C18.75 5.19771 18.3023 4.75 17.75 4.75L5.75 4.75C5.19772 4.75 4.75 5.19771 4.75 5.75V12.75C4.75 13.3023 5.19771 13.75 5.75 13.75C6.30229 13.75 6.75 14.1977 6.75 14.75C6.75 15.3023 6.30229 15.75 5.75 15.75H4.75C3.64543 15.75 2.75 14.8546 2.75 13.75V4.75C2.75 3.64543 3.64543 2.75 4.75 2.75L18.75 2.75C19.8546 2.75 20.75 3.64543 20.75 4.75V13.75C20.75 14.8546 19.8546 15.75 18.75 15.75Z" fill="currentColor"></path>
					</svg>
				</span>
				تصدير كملف excel
			</a>
		</div>

		<div class="d-flex col-12 justify-content-between">
			<div class="d-flex">
				<span class="input-group-text" style="margin-left:10px">من تاريخ</span>
				<input type="date" id="fromDate" class="form-control form-control-solid" placeholder="من تاريخ" />
			</div>
			<div class="d-flex">
				<span class="input-group-text" style="margin-left:10px">إلى تاريخ</span>
				<input type="date" id="toDate" class="form-control form-control-solid" placeholder="إلى تاريخ" />
			</div>
			<div>
				<button type="button" id="searchButton" class="btn btn-primary">بحث</button>
				<button type="button" id="deleteSearch" class="btn btn-secondary" onclick="location.reload()">حذف البحث</button>
			</div>
		</div>
	</div>
	<div class="card-body fs-5 pt-0">
		<div class="table-responsive">
			<table id="TaskReminders" class="text-center fs-4 table table-row-dashed table-row-gray-300 gy-5">
				<thead>
					<tr class="fw-bold text-gray-800">
						<th class="d-none"></th>
						<th>التذكير</th>
						<th>المهمه</th>
						<th>من اضاف التذكير</th>
						<th>تاريخ التذكير</th>
						<th>حاله الانجاز</th>
						<th>تاريخ الانجاز</th>
						<th>ملاحظه</th>
						@if (!isSuperAdminOrAdmin)
						{
							<th>انجاز</th>
							<th>تعديل</th>
							<th>حذف</th>
						}
					</tr>
				</thead>
				<tbody data-url="/TaskReminder/GetTaskReminders" data-controller="TaskReminder">
					@* TaskReminders will be rendered here *@
				</tbody>
			</table>
		</div>
	</div>
</div>

<input type="hidden" name="__RequestVerificationToken" value="@antiforgery.GetAndStoreTokens(Context).RequestToken" />


@section Plugins
{
	<script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
}
@section Scripts
{
	<script src="~/js/TaskReminder.js" asp-append-version="true"></script>
	<script type="text/javascript">
		var isSuperAdminOrAdmin = @isSuperAdminOrAdmin.ToString().ToLower();
	</script>
	<script>
		$('#searchButton').on('click', function () {
			var fromDate = $('#fromDate').val();
			var toDate = $('#toDate').val();

			// Update DataTable AJAX URL with date filters
			datatable.ajax.url('/TaskReminder/GetTaskReminders?fromDate=' + encodeURIComponent(fromDate) + '&toDate=' + encodeURIComponent(toDate)).load();
		});


		function exportToExcel() {
			// Get the DataTable instance
			var table = $('#TaskReminders').DataTable();

			// Get the current search value
			var searchValue = table.search();

			// Get the current sorting column and direction
			var order = table.order();
			var sortColumnIndex = order[0][0]; // Get the index of the sorted column
			var sortColumnDirection = order[0][1]; // asc or desc

			// Get the column name for sorting
			var sortColumn = table.settings().init().columns[sortColumnIndex].name;

			// Get the filter values if needed (for example, date filters)
			var fromDate = $('#fromDateInput').val();
			var toDate = $('#toDateInput').val();

			// Construct the export URL with the search and sort parameters
			var url = `/TaskReminder/ExportToExcel?searchValue=${encodeURIComponent(searchValue)}&sortColumn=${sortColumn}&sortColumnDirection=${sortColumnDirection}&fromDate=${fromDate}&toDate=${toDate}`;

			// Redirect to the generated URL to download the Excel file
			window.location.href = url;
		}

	</script>
}